<% include partials/header.ejs %>

<div class="ui main text container">
  <div class="ui huge header">RestFul Blog App</div>
  <div class="ui top attached segment">
    <div class="ui divided items">
        <h1>welcome to the index page</h1>

        <% blogs.forEach(function(blog){ %>
        
          <div class="item">
            <div class="image">
                <img src="<%= blog.image %>" alt="">
            </div>
            <div class="content">
                <a  class="header" href="/blogs/<%= blog._id %>"> 
                  <%= blog.title %> 
                </a>
                <div class="meta">
                  <span><%= blog.created.toDateString() %></span>

                </div>
                <div class="description">
                    <p><%= blog.body.substring(0, 50) %>...</p>
                </div>
                <div class="extra">
                    <a  class="ui floated basic violet button" href="/blogs/<%= blog._id %>"> 
                      Read more
                      <i class="right chevron icon"></i> 
                    </a>
                </div>
            </div>
            <p><a href="/blogs/<%= blog._id %>">read more..</a></p>
        </div>
        
        <% }) %>
    </div>
  </div>
</div>



<% include partials/footer.ejs %>