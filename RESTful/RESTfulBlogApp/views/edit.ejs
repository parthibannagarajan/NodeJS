<% include partials/header.ejs %>

<div class="ui main text container segment">
  <div class="ui huge header">EDIT <%= blog.title %></div>
  <form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" required value="<%= blog.title %>">
    </div>
    <div class="field">
    <label>Image</label>
    <input type="text"  name="blog[image]" required value="<%= blog.image %>">
  </div>
  <div class="field">
    <label>Blog content</label>
    <textarea name="blog[body]" cols="30" rows="10" required><%= blog.body %></textarea>
  </div>

  <button class="ui violet basic button">update</button>
  </form>
</div>



